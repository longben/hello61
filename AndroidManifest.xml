<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bitbee.android.hello61"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="9" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.bitbee.android.hello61.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bitbee.android.hello61.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.bitbee.android.hello61.SingleMenuItemActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.bitbee.android.hello61.BoardActivity"
            android:label="@string/title_activity_board" >
        </activity>
        <activity
            android:name="com.bitbee.android.hello61.CourseActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_course"
            android:parentActivityName="com.bitbee.android.hello61.MainActivity"
            android:theme="@style/FullscreenTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bitbee.android.hello61.MainActivity" />
        </activity>
        <activity
            android:name="com.bitbee.android.hello61.CourseDetailActivity"
            android:label="@string/title_activity_course_detail"
            android:parentActivityName="com.bitbee.android.hello61.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bitbee.android.hello61.MainActivity" />
        </activity>
    </application>

</manifest>